{
  "compilerOptions": {
    "jsxImportSource": "astro",
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "baseUrl": ".",
    "noEmit": true,
    "isolatedModules": true,
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "files": ["astro.config.mjs"],
  "include": ["src"],
  "exclude": ["dist", "node_modules"]
}
